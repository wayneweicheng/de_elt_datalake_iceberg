# Google Cloud Platform Settings
GCP_PROJECT_ID=climate-data-lake-iceberg
GCP_REGION=australia-southeast1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Storage Settings
RAW_BUCKET=climate-lake-raw-data
ICEBERG_TABLES_BUCKET=climate-lake-iceberg-tables
ICEBERG_CATALOG_BUCKET=climate-lake-iceberg-catalog

# NOAA API Settings
NOAA_API_TOKEN=your-token-here
GHCN_STATIONS_URL=https://www1.ncdc.noaa.gov/pub/data/ghcn/daily/ghcnd-stations.txt
GHCN_DATA_URL=https://www1.ncdc.noaa.gov/pub/data/ghcn/daily/by_year/

# Iceberg Settings
CATALOG_NAME=climate_catalog
NAMESPACE=climate_data

# Batch Processing Settings
MAX_RECORDS_PER_BATCH=100000
CHUNK_SIZE=10000

# Pub/Sub Settings
PUBSUB_TOPIC=climate-data-stream

# Logging Settings
LOG_LEVEL=INFO

# Cloud Function Settings
FUNCTION_MEMORY=2048MB
FUNCTION_TIMEOUT=540s 